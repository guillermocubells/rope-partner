<h2>Update user</h2>
{{! update username, update email }}
<form action="/settings/update-user" method="POST">
  <label>Username
    <input
      type="text"
      name="username"
      placeholder="Username"
      value="{{user}}"
    />
  </label>
  <br />

  <label>Email
    <input
      type="text"
      name="email"
      placeholder="Email"
      value="{{user.email}}"
    />
  </label>
  <br />

  <button type="submit">Change yo deets</button>

</form>